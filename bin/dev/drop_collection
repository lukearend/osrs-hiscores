#!/usr/bin/env python3

import argparse
from src.analysis import connect_mongo

parser = argparse.ArgumentParser("Drop a MongoDB collection.")
parser.add_argument('-c', '--coll', help="name of collection to drop")
parser.add_argument('-u', '--url', help="MongoDB instance URL (default is localhost:27017)")

args = parser.parse_args()
db = connect_mongo(args.url if args.url else "localhost:27017")
db[args.coll_name].drop()
print(f"dropped collection '{args.coll_name}'")
